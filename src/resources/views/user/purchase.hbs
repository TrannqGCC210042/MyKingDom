<div class="container pb-5 pt-4 h-100">
    <div class="col-md-10 m-auto title-shop">
        <h1>{{title}}</h1>
    </div>
    <div class="row d-flex justify-content-center align-items-center h-100">
        {{#each purchaseArray}}
        <div class="col-lg-10 col-xl-8 py-3">
            <div class="card" style="border-radius: 10px;">
                <div class="card-body p-4">
                    <div
                        class="d-flex justify-content-between align-items-center mb-4">

                        <div
                            class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="button" class="btn btn-secondary ">Waiting
                                for confirmation <i class="bi bi-check-circle"></i></button>
                        </div>
                        <p class="small text-muted mb-0"
                            style="color: rgb(149, 4, 233);">Order ID :
                            {{this.orders.id}}</p>
                    </div>
                    <div class="card shadow-0 border mb-4">
                        <div class="card-body">
                            {{#each this.products as |product|}}
                            <div class="card shadow-0 border mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <img
                                                src="/img/product/{{product.image}}"
                                                class="img-fluid" alt="Phone">
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0">{{product.name}}</p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">{{product.supplier}}</p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">Brand:
                                                {{product.brand}}</p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">Qty:
                                                {{product.quantity}}</p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">${{product.unitprice}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>

                    <div class="d-flex justify-content-between pt-2">
                        <p class="fw-bold mb-0">Order Details</p>
                    </div>

                    <div class="d-flex justify-content-between pt-2">
                        <p class="text-muted mb-0">Phone Number :
                            {{this.orders.cust_phone}}</p>
                        <p class="text-muted mb-0"><span
                                class="fw-bold me-4">SubTotal</span>
                            ${{this.orders.subtotal}}</p>
                    </div>

                    <div class="d-flex justify-content-between">
                        <p class="text-muted mb-0">Invoice Date :
                            {{this.orders.order_date}}</p>
                        <p class="text-muted mb-0"><span
                                class="fw-bold me-4">Delivery Charges</span>
                            $5.00</p>
                    </div>

                    <div class="d-flex justify-content-between pt-2">
                        <p class="text-muted mb-0 mt-3"></p>
                        <h5 class="text-muted mb-0"><span
                                class="fw-bold me-4 text-uppercase">Total paid:</span>
                            ${{this.orders.total}}</h5>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>