<div class="pd-wrap">
    <div class="container">
        <div class="row" id="templete">
            <div class="col-md-6 col-lg-6 col-6">
                <div id="slider">
                    <div class="item text-center" id="image">
                        <img src="/img/product/{{product.image}}"
                            class="img-fluid" />
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-6">
                <div class="product-dtl">
                    <div class="product-info">
                        <div class="product-name fw-bold">{{product.name}}</div>
                        <div class="product-price-discount">
                            <span>${{product.price}}</span>
                            {{#ifCond product.old_price '>' product.price}}
                            <span class="line-through">${{product.old_price}}</span>
                            {{/ifCond}}
                        </div>
                    </div>
                    <p class="shortDescription">
                        {{product.short_description}}
                    </p>

                    <div class="mb-4">
                        <a href="#suggest">See more details</a>
                    </div>

                    <div class="row">
                        <div class="col-lg-4 col-sm-12">
                            {{#ifCond product.quantity '==' 0}}
                            <div class="fw-bold stock">
                                Out of Stock
                            </div>
                            {{else}}
                            <div class="stock">
                                Stock: <span id="stock">{{product.quantity}}</span>
                            </div>
                            {{/ifCond}}
                        </div>
                        <div class="col-lg-8 col-sm-12">
                            <div class="product-count mt-0 d-flex me-4">
                                <label for="size" class="me-4 pt-2">Quantity</label>
                                <div class="d-flex count">
                                    <div class="qtyminus">-</div>
                                    <input type="text" readonly name="quantity"
                                        id="quantity" value="1" class="qty" />
                                    <div class="qtyplus">+</div>
                                </div>
                            </div>
                        </div>
                        <button class="round-black-btn" id="add-to-cart" style="width: 73%;"
                            data-product-id="{{product.id}}">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="product-info-tabs" id="suggest">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <p class="nav-link active">Description</p>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="description"
                    role="tabpanel"
                    aria-labelledby="description-tab">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h3 class="box-title mt-3">General Info</h3>
                        <div class="table-responsive">
                            <table class="table table-striped table-product">
                                <tbody>
                                    <tr>
                                        <td width="40%" class="fw-bold">Brand</td>
                                        <td>{{product.brand}}</td>
                                    </tr>
                                    <tr>
                                        <td width="40%" class="fw-bold">Branch</td>
                                        <td>{{product.branch}}</td>
                                    </tr>
                                    <tr>
                                        <td width="40%" class="fw-bold">Supplier</td>
                                        <td>{{product.supplier}}</td>
                                    </tr>
                                    <tr>
                                        <td width="40%" class="fw-bold">Detail
                                            Description</td>
                                        <td>
                                            <p style="text-align: justify;">
                                                {{product.detail_description}}
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="40%" class="fw-bold">Delivery
                                            Condition</td>
                                        <td>Delivery Standar</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ======= Suggest For You Section ======= -->
        <section id="why-us" class="why-us">
            <div class="container">
                <div class="section-title">
                    <h1 class="fw-bold text-center mt-1">Suggest For You</h1>
                </div>
                <div class="row">
                    {{#each productSuggest}}
                    <div class="col-lg-4 col-md-4 col-6" data-aos="fade-up">
                        <a href="/detail/{{this.id}}">
                            <div class="box">
                                <h4>{{this.name}}</h4>
                                <img src="/img/product/{{this.image}}"
                                    class="img-fluid mb-2" alt>
                                <p class="text-center">{{this.short_description}}</p>
                                <div class="price"><a href>{{this.price}}</a></div>
                            </div>
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </section>
    </div>
</div>