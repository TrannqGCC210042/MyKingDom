<!-- ======= Why Us Section ======= -->
<section id="why-us" class="why-us">
  <div class="container">
    <div class="section-title">
      <span>BEST SELLING</span>
      <h1 class="fw-bold text-center mt-1">BEST SELLING</h1>
    </div>
    <div class="row">
      {{#each bestSellings}}
      <div class="col-lg-4 col-md-4" data-aos="fade-up">
        <div class="box">
          <span class="ms-4 col-md-1">0{{ sum @index 1}}</span>
          <h4>{{this.name}}</h4>
          <a href="/detail/{{this.id}}"> <img src="/img/product/{{this.image}}"
              class="img-fluid mb-2" alt>
          </a>
          <p>{{this.short_description}}</p>
        </div>
      </div>
      {{/each}}
    </div>

  </div>
</section><!-- End Why Us Section -->

<!-- ======= Clients Section ======= -->
<section id="clients" class="clients">
  <div class="container" data-aos="zoom-in">
    <div class="row d-flex align-items-center">
      {{#each brands}}
      <div class="col-lg-2 col-md-4 col-4">
        <img src="/img/brand/{{this.image}}" class="img-fluid"
          alt="{{this.name}}">
      </div>
      {{/each}}
    </div>

  </div>
</section><!-- End Clients Section -->

<!-- ======= Services Section ======= -->
<section id="services" class="services">
  <div class="container">

    <div class="section-title">
      <span>Special Discount</span>
      <h1>Special Discount</h1>
    </div>

    <div class="row">
      {{#each productDiscounts}}
      <div class="col-lg-4 col-md-6 col-6 d-flex align-items-stretch mt-4 mt-md-0"
        data-aos="fade-up" data-aos-delay="150">
        <div class="icon-box">
          <a href="/detail/{{this.id}}"><img src="/img/product/{{this.image}}"
              class="img-fluid mb-2"
              alt="{{this.image}}"></a>

          <h4><a href>{{this.name}}</a></h4>
          <p>{{this.short_description}}</p>
          {{#ifCond this.old_price '<' this.price}}
          <div class="oldPrice text-decoration-line-through my-2">
            ${{this.old_price}}
          </div>
          {{/ifCond}}
          <div class="price text-danger mt-2">
            ${{this.price}}
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section><!-- End Services Section -->

