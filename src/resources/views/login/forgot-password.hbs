<div class="tab-pane fade pt-3"
    id="profile-change-password">
    <p id="change-password-error"
        class="text-danger text-center"></p>
    <!-- Change Password Form -->
    <form id="change-password-form">
        <div class="row mb-3">
            <label for="oldPassword"
                class="col-md-4 col-lg-3 col-form-label">Current
                Password</label>
            <div class="col-md-8 col-lg-9">
                <input name="password"
                    type="password"
                    class="form-control"
                    id="oldPassword">
            </div>
            <div class="col-lg-3"></div>
            <div class="col-lg-8">
                <p id="oldPasswordError"
                    class="text-danger"></p>
            </div>
        </div>

        <div class="row mb-3">
            <label for="newPassword"
                class="col-md-4 col-lg-3 col-form-label">New
                Password</label>
            <div class="col-md-8 col-lg-9">
                <input name="newpassword"
                    type="password"
                    class="form-control"
                    id="newPassword">
            </div>
            <div class="col-lg-3"></div>
            <div class="col-lg-8">
                <p id="newPasswordError"
                    class="text-danger"></p>
            </div>
        </div>

        <div class="row mb-3">
            <label for="confirmPassword"
                class="col-md-4 col-lg-3 col-form-label">Re-enter
                New
                Password</label>
            <div class="col-md-8 col-lg-9">
                <input
                    name="confirmPassword"
                    type="password"
                    class="form-control"
                    id="confirmPassword">
            </div>
        </div>

        <div class="text-center">
            <button type="submit"
                class="btn btn-dark">Change
                Password</button>
        </div>
    </form>
</div>